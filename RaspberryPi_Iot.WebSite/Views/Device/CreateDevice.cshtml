@model LupenM.WebSite.Models.CreateDeviceModel

<h1 class="page-header">@ViewBag.Title</h1>

<div class="panel-body">
    <div class="row">
        <div class="col-lg-6">
            @using (Html.BeginForm())
            {
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                <label>Device name</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>IP</label>
                @Html.TextBoxFor(x => x.IP, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IP, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>MPN</label>
                @Html.TextBoxFor(x => x.MPN, new { @class = "form-control" })
            </div>

            if (ViewBag.UserRole != "users")
            {
            <div class="form-group">
                <label>User</label>
                @Html.DropDownListFor(x => x.SelectedUserId, new SelectList(Model.ListUsers, "Id", "UserName"), "-- Select User --",
                new { @class = "form-control", @id = "ddlDevice" })
            </div>
            }

            <div class="form-group">
                <label>Device type</label>
                @Html.DropDownListFor(x => x.SelectedDeviceTypeId, new SelectList(Model.ListDeviceTypes, "ID", "Name"), "-- Select Device type --",
                                new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SelectedDeviceTypeId, "", new { @class = "text-danger" })
            </div>

            <div class="pull-right">
                <a href="~/Device" class="btn btn-info">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            }
        </div>
    </div>
</div>