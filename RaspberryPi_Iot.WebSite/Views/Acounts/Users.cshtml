@using CSDI.WebAPIClient.DataModels
@model LupenM.WebSite.Models.UserListingPageModel

@{
  ViewBag.Title = "Home Page";
}

<h1 class="page-header">Users</h1>

@using (Html.BeginForm("GetUsers", "Acounts", FormMethod.Post, new { @id = "fSearch" }))
{
<div class="panel-body">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Name</th>
                <th>E-mail</th>
                <th>Telephone</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
            <tr class="odd gradeX">
                <td>@item.Name</td>
                <td>@item.UserName</td>
                <td>@item.Telephone</td>
                <td>@item.Address</td>
            </tr>
            }
        </tbody>
    </table>

    <p>
        @Html.Partial("_PagerPartialView", new LupenM.WebSite.Models.PagerModel(Model.CurrentPage, Model.PageSize, Model.TotalRecords, Model.ItemsCount, Model.PageOrder))

        @Html.HiddenFor(m => m.CurrentPage, new { id = "CurrentPage" })
        @Html.HiddenFor(m => m.TotalPages)
        @Html.HiddenFor(m => m.PageSize)
    </p>
</div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/PagerScript.js"></script>